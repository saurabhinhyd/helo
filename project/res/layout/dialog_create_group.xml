<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editTextGroupLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/group_info_dialog_hint_label" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextCallFrequencyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextGroupLabel"
        android:ems="10"
        android:hint="@string/group_info_dialog_hint_frequency"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerCallFrequencyUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editTextCallFrequencyValue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextGroupLabel"
        android:layout_toRightOf="@id/editTextCallFrequencyValue"
        android:entries="@array/frequency_list" />

</RelativeLayout>